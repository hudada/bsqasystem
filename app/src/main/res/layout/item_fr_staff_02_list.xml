<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/the_space"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_01"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/the_space"
                android:gravity="center_vertical"
                android:text="问题种类:"
                android:textColor="@color/text_3"
                android:textSize="@dimen/text_size02" />

            <TextView
                android:id="@+id/tv_02"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:gravity="center_vertical"
                android:text="其它"
                android:textColor="@color/text_6"
                android:textSize="@dimen/text_size02" />

            <TextView
                android:id="@+id/tv_03"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/the_space"
                android:gravity="right"
                android:text="解决中"
                android:textColor="@color/green"
                android:textSize="@dimen/text_size02" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/the_space"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="问题地点：3号工厂"
                android:textColor="@color/text_9"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/the_space"
            android:ellipsize="end"
            android:lines="1"
            android:text="问题时间：2018-2-2 12:12:12"
            android:textColor="@color/text_9"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_06"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/the_space"
            android:layout_marginLeft="@dimen/the_space"
            android:ellipsize="end"
            android:lines="1"
            android:text="问题描述："
            android:textColor="@color/text_9"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/text_9" />
    </LinearLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="match_parent"
        android:src="@mipmap/a_arrow"
        android:layout_alignParentRight="true"
        android:gravity="center"
        />
</RelativeLayout>
